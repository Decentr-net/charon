{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "charon": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "charon",
      "sourceRoot": "charon/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "charon/dist",
            "index": "charon/src/index.html",
            "main": "charon/src/main.ts",
            "polyfills": "charon/src/polyfills.ts",
            "tsConfig": "charon/tsconfig.app.json",
            "aot": true,
            "assets": [
              "charon/src/manifest.json",
              "charon/src/favicon.ico",
              "charon/src/assets"
            ],
            "styles": [
              "charon/src/assets/sass/reset.scss",
              "charon/src/assets/sass/theme.scss",
              "charon/src/assets/sass/fonts.scss",
              "charon/src/assets/sass/styles.scss",
              "charon/src/assets/sass/media.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "charon/src/assets/sass"
              ]
            },
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "charon/src/environments/environment.ts",
                  "with": "charon/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "charon:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "charon:build:production"
            },
            "develop": {
              "proxyConfig": "proxy.conf.js",
              "disableHostCheck": true,
              "host": "0.0.0.0"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "charon:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "charon/src/test.ts",
            "polyfills": "charon/src/polyfills.ts",
            "tsConfig": "charon/tsconfig.spec.json",
            "karmaConfig": "charon/karma.conf.js",
            "assets": [
              "charon/src/favicon.ico",
              "charon/src/assets"
            ],
            "styles": [
              "charon/src/assets/sass/reset.scss",
              "charon/src/assets/sass/theme.scss",
              "charon/src/assets/sass/fonts.scss",
              "charon/src/assets/sass/styles.scss",
              "charon/src/assets/sass/media.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "charon/src/assets/sass"
              ]
            },
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "charon/tsconfig.app.json",
              "charon/tsconfig.spec.json",
              "charon/e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "charon/e2e/protractor.conf.js",
            "devServerTarget": "charon:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "charon:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "charon",
  "cli": {
    "analytics": false
  }
}
